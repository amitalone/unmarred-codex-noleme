{
  "name": "@repo/ui",
  "version": "0.0.0",
  "sideEffects": [
    "**/*.css"
  ],
  "files": [
    "dist"
  ],
  "exports": {
    "./styles.css": "./dist/index.css",
    "./*": "./dist/*.js"
  },
  "license": "MIT",
  "scripts": {
    "build:styles": "tailwindcss -i ./src/styles.css -o ./dist/index.css --config ./tailwind.config.js",
    "build:components": "tsc",
    "build": "pnpm build:styles && pnpm build:components",
    "check-types": "tsc --noEmit",
    "dev:styles": "tailwindcss -i ./src/styles.css -o ./dist/index.css --config ./tailwind.config.js --watch",
    "dev:components": "tsc --watch",
    "lint": "eslint src --max-warnings 0",
    "test": "jest --runInBand --detectOpenHandles --forceExit",
    "test:watch": "jest --watch",
    "mutation": "stryker run",
    "mutation:report": "open reports/mutation/html/index.html"
  },
  "peerDependencies": {
    "react": "^19",
    "react-dom": "^19"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/jest-config": "workspace:*",
    "@repo/stryker-config": "workspace:*",
    "@repo/tailwind-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@stryker-mutator/core": "^8.0.0",
    "@stryker-mutator/jest-runner": "^8.7.1",
    "@stryker-mutator/typescript-checker": "^8.0.0",
    "@tailwindcss/cli": "^4.1.5",
    "@testing-library/react": "^15.0.0",
    "@types/jest": "^29.5.12",
    "@types/react": "^19.1.0",
    "@types/react-dom": "^19.1.1",
    "eslint": "^9.29.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "tailwindcss": "^4.1.5",
    "ts-jest": "^29.1.2",
    "typescript": "5.8.2"
  }
}
